<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.upload.adeogo.dokita.activities.OrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            tools:src="@drawable/doctor" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                tools:text="Dipo Kolawolo" />

            <TextView
                android:id="@+id/profile_speciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_light_italic"
                android:gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                tools:text="General Surgeon" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/book_appointment"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/curved_button_background_filled"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:gravity="center"
                    android:text="APPOINTMENT"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/message"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/curved_button_background_hollow"
                    android:gravity="center"
                    android:text="MESSAGE"
                    android:textColor="#388E3C" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/ten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="1 year(s) in \nDokitari"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/twelve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="200+ \nappointments"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/four"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="9 years \nExperience"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/timeLayout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView

                        android:id="@+id/pickTimeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:paddingRight="10dp"
                        android:text="Pick Time:"
                        app:srcCompat="@drawable/ic_access_time_black_24dp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/timePickedTextVIew"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0:00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="13:00" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Days Available"
                android:textSize="12sp" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/sunday"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/curved_button_background"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="S"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/monday"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/curved_button_background"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="M"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/tuesday"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/curved_button_background"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="T"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/wednesday"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/curved_button_background"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="W"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/thursday"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/curved_button_background"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="T"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/friday"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/curved_button_background"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="F"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/saturday"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/curved_button_background"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="S"
                        android:textColor="@color/white"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
