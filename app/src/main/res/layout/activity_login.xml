<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/rootLayout"
    tools:context=".activities.LoginActivity">


    <LinearLayout
        android:id="@+id/dokitari_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D O K I T A R I"
            android:textSize="32sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOCTOR"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L O G I N"
            android:layout_marginTop="40dp"
            android:textSize="35sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtEmail"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center"

                app:met_floatingLabel="highlight"
                app:met_baseColor="@color/colorPrimary"
                app:met_singleLineEllipsis="true"
                app:met_primaryColor="@color/colorPrimary"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtPassword"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center"

                app:met_floatingLabel="highlight"
                app:met_baseColor="@color/colorPrimary"
                app:met_singleLineEllipsis="true"
                app:met_primaryColor="@color/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>



    <Button
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:background="@mipmap/ic_login_round"
        android:textColor="@android:color/white"
        android:id="@+id/btnSignIn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dokitari_layout" />


    <LinearLayout
        android:id="@+id/reg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_view_pwd"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:text="NEW ACCOUNT"
            android:id="@+id/btnRegister"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:layout_above="@+id/txt_rider_app"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:text="FORGOT PASSWORD?"
        android:id="@+id/txt_view_pwd"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_rider_app"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:autoLink="web"
        android:textAlignment="center"
        android:text="LOOKING FOR THE DOCTOR APP?"
        android:textColor="@color/bottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>