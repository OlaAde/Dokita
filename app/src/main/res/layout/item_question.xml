<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:id="@+id/mYouMessage"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/you_curved_background"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/youQuestionMessageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:maxWidth="250dp"
                android:textSize="15sp"
                tools:text="Message" />

            <com.joooonho.SelectableRoundedImageView
                android:scaleType="centerCrop"
                tools:src="@drawable/background"
                android:id="@+id/photoYou"
                android:layout_width="150dp"
                android:layout_height="150dp"

                app:sriv_right_top_corner_radius="10dp"
                app:sriv_left_top_corner_radius="10dp"
                app:sriv_left_bottom_corner_radius="10dp"/>

            <!--<TextView-->
                <!--android:textSize="12sp"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:text="12:00pm"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/timeYou"/>-->

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:id="@+id/mNotYouMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/not_you_curved_background"
                android:id="@+id/questionMessageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:layout_weight="0"
                android:maxWidth="250dp"
                android:textSize="15sp"
                tools:text="Message" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/photoNotYou"
                    android:layout_width="150dp"
                    android:layout_height="150dp"

                    android:scaleType="centerCrop"
                    app:sriv_left_top_corner_radius="10dp"
                    app:sriv_right_bottom_corner_radius="10dp"
                    app:sriv_right_top_corner_radius="10dp"
                    tools:src="@drawable/background" />
            </FrameLayout>

        </RelativeLayout>

</RelativeLayout>