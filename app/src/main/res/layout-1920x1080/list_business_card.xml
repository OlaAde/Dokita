<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_height="110dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/barrier1"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <View
            android:id="@+id/barrier2"
            android:layout_alignParentRight="true"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr Mark Kent"
                android:fontFamily="@font/open_sans_semibold"
                android:id="@+id/card_DoctorName"
                android:textColor="@color/black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="left"/>


            <TextView
                android:layout_below="@+id/card_DoctorName"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CBD West Medical Centre"
                android:fontFamily="@font/open_sans_light"
                android:id="@+id/card_DoctorPlace"
                android:textColor="@color/black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="left"/>



            <TextView
                android:layout_below="@+id/card_DoctorPlace"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_date_tv"
                android:text="Tomorrow, 10:00am"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#174142"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="View"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/cancel_ll">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_clear_black_24px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:id="@+id/cancel_tv"
                        android:textColor="#174142"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                </LinearLayout>
            </LinearLayout>



    </RelativeLayout>


</android.support.v7.widget.CardView>